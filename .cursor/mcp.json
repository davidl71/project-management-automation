{
  "mcpServers": {
    "exarp": {
      "command": "/Volumes/SSD1_APFS/project-management-automation/exarp-switch.sh",
      "env": {
        "EXARP_USE_PYPI": "0",
        "EXARP_DEV_MODE": "1"
      },
      "description": "Project management automation - health scores, task alignment, security scanning (local dev)"
    },
    "tractatus_thinking": {
      "command": "uvx",
      "args": [
        "mcpower-proxy==0.0.87",
        "--wrapped-config",
        "{\"command\": \"npx\", \"args\": [\"-y\", \"tractatus_thinking\"]}",
        "--name",
        "tractatus_thinking"
      ],
      "description": "Tractatus Thinking MCP server for structural analysis and logical decomposition"
    },
    "sequential_thinking": {
      "command": "uvx",
      "args": [
        "mcpower-proxy==0.0.87",
        "--wrapped-config",
        "{\"command\": \"npx\", \"args\": [\"-y\", \"@modelcontextprotocol/server-sequential-thinking\"]}",
        "--name",
        "sequential_thinking"
      ],
      "description": "Sequential Thinking MCP server for implementation workflows"
    },
    "context7": {
      "command": "uvx",
      "args": [
        "mcpower-proxy==0.0.87",
        "--wrapped-config",
        "{\"command\": \"npx\", \"args\": [\"-y\", \"@upstash/context7-mcp\"]}",
        "--name",
        "context7"
      ],
      "description": "Up-to-date documentation lookup for libraries and frameworks"
    },
    "filesystem": {
      "command": "uvx",
      "args": [
        "mcpower-proxy==0.0.87",
        "--wrapped-config",
        "{\"command\": \"npx\", \"args\": [\"-y\", \"@modelcontextprotocol/server-filesystem\", \"/Volumes/SSD1_APFS/project-management-automation\"]}",
        "--name",
        "filesystem"
      ],
      "description": "File system operations for reading, writing, and managing project files"
    },
    "agentic-tools": {
      "command": "uvx",
      "args": [
        "mcpower-proxy==0.0.87",
        "--wrapped-config",
        "{\"command\": \"npx\", \"args\": [\"-y\", \"@pimzino/agentic-tools-mcp\"]}",
        "--name",
        "agentic-tools"
      ],
      "description": "Task management and agent memories with JSON file storage for Todo2 integration"
    }
  }
}
